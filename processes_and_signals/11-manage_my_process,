#!/usr/bin/env bash
# This script manages the manage_my_process process.

# Function for the process that writes to /tmp/my_process
manage_my_process() {
    while true; do
        echo "I am alive!" >> /tmp/my_process
        sleep 2
    done
}

# PID file location
PID_FILE="/var/run/my_process.pid"

start_process() {
    if [ -f "$PID_FILE" ]; then
        echo "manage_my_process is already running."
        return
    fi

    # Start the manage_my_process script in the background
    manage_my_process &
    echo $! > "$PID_FILE"  # Save the PID
    echo "manage_my_process started"
}

stop_process() {
    if [ ! -f "$PID_FILE" ]; then
        echo "manage_my_process is not running."
        return
    fi

    kill "$(cat "$PID_FILE")"
    rm -f "$PID_FILE"  # Remove the PID file
    echo "manage_my_process stopped"
}

restart_process() {
    stop_process
    start_process
    echo "manage_my_process restarted"
}

# Main script logic for managing the process
case "$1" in
    start)
        start_process
        ;;
    stop)
        stop_process
        ;;
    restart)
        restart_process
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        ;;
esac
